<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ifsp.pdm.emanoela.listadetarefas">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/icon"
        android:supportsRtl="true"
        android:theme="@style/Theme.ListaDeTarefas">
        <activity android:name=".view.TarefaConcluidaActivity" />
        <activity android:name=".view.EditarTarefaActivity" />
        <activity android:name=".view.AdicionarTarefaActivity" />
        <activity android:name=".view.RecuperarSenhaActivity" />
        <activity android:name=".view.CadastrarActivity" />
        <activity android:name=".view.AutenticacaoActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".view.MainActivity" />
    </application>

</manifest>